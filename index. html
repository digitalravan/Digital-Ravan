<!DOCTYPE html>
<html lang="en">
<head>
  <title>Panda Love</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    /* Style the body element */
    body {
      font-family: Arial, Helvetica, sans-serif;
      background-color: #f0f0f0;
      margin: 0;
      padding: 0;
    }

    /* Style the container element */
    .container {
      width: 80%;
      max-width: 600px;
      margin: 0 auto;
      text-align: center;
    }

    /* Style the panda image element */
    .panda {
      width: 300px;
      height: 300px;
      margin: 20px auto;
    }

    /* Style the text element */
    .text {
      font-size: 24px;
      color: #333;
      margin: 10px;
    }

    /* Style the button elements */
    .button {
      display: inline-block;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      background-color: #1abc9c;
      color: white;
      font-size: 18px;
      cursor: pointer;
    }

    /* Style the button elements when hovered */
    .button:hover {
      background-color: #16a085;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Add a panda image element -->
    <img src="panda.jpg" alt="Panda" class="panda">

    <!-- Add a text element -->
    <p class="text">I love you cutie. Can I date you?</p>

    <!-- Add two button elements -->
    <button class="button" id="yes-button">YES</button>
    <button class="button" id="no-button">NO</button>
  </div>

  <script>
    // Get the button elements by their id
    var yesButton = document.getElementById("yes-button");
    var noButton = document.getElementById("no-button");

    // Add a click event listener to the yes button
    yesButton.addEventListener("click", function() {
      // Change the text element to say "Thank you and love you so much"
      var text = document.querySelector(".text");
      text.innerHTML = "Thank you and love you so much";
    });

    // Add a click event listener to the no button
    noButton.addEventListener("click", function() {
      // Change the text element to say "Please reconsider"
      var text = document.querySelector(".text");
      text.innerHTML = "Please reconsider";
    });
  </script>
</body>
</html>
